@* The Edit view allows users to modify existing department records. *@

@model MVC_CRUD_APP.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Edit Department</h3>
                </div>
                <div class="card-body">

                    <form asp-action="Edit">
                        <input type="hidden" asp-for="DeptId" />

                        <div class="form-group mb-3">
                            <label asp-for="DeptName" class="form-label"></label>
                            <input asp-for="DeptName" class="form-control" />
                            <span asp-validation-for="DeptName" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Save" class="btn btn-success btn-lg" />
                        </div>
                    </form>

                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>