
 @* Form to create a new department *@
@model MVC_CRUD_APP.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create Department</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="DeptName" class="form-label"></label>
                            <input asp-for="DeptName" class="form-control" />
                            <span asp-validation-for="DeptName" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-link">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
